#!/bin/bash

max_age=<%= @max_age %>

function age() {
  age_in_seconds=$(echo "$(date +%s) -$(stat -c %X /proc/$PID)" | bc)
  if [[ "$age_in_seconds" -ge "$max_age" ]];then
    kill -9 $PID
    rm -rf <%= @pid_path %>
  fi
  }


if [[ -f "<%= @pid_path %>" ]];then
      PID=`cat <%= @pid_path %>`
      age
fi
